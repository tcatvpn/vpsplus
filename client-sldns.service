[Unit]
Description=SlowDNS By SL, nameserver= isi dengan ns cloudflare
Documentation=https://nekopoi.care
After=network.target nss-lookup.target

[Service]
Type=simple
User=root
CapabilityBoundingSet=CAP_NET_ADMIN CAP_NET_BIND_SERVICE
AmbientCapabilities=CAP_NET_ADMIN CAP_NET_BIND_SERVICE
NoNewPrivileges=true
ExecStart=/etc/slowdns/sldns-client -udp 8.8.8.8:53 --pubkey-file /etc/slowdns/server.pub dns.multi-dns.magic-cat.tk 127.0.0.1:2222
Restart=on-failure

[Install]
WantedBy=multi-user.target
